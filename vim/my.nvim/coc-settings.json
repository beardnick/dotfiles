{
    "coc.preferences.rootPatterns": [
        ".git",
        ".hg",
        ".projections.json"
    ],
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "lua": {
            "command": "lua-language-server",
            "filetypes": [
                "lua"
            ],
            "settings": {
                "Lua": {
                    "workspace.library": {
                        "/usr/share/nvim/runtime/lua": true,
                        "/usr/share/nvim/runtime/lua/vim": true,
                        "/usr/share/nvim/runtime/lua/vim/lsp": true
                    },
                    "diagnostics": {
                        "globals": [
                            "vim"
                        ]
                    }
                }
            }
        },
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "cuda",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls-root",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": ".vim"
                },
                "client": {
                    "snippetSupport": true
                },
                "compilationDatabaseDirectory": "cmake-build-Release/"
            }
        }
    },
    "java.import.maven.enabled": true,
    "java.errors.incompleteClasspath.severity": "ignore",
    "python.jediEnabled": false,
    "python.linting.flake8Enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Args": [
        "--ignore=E303,E501,E305,E302,E226,E231,E265,E202,E128,E126,E201,E111,E701,E114,E261,E225"
    ],
    "diagnostic.virtualText": false,
    "diagnostic.enable": true,
    "suggest.noselect": false,
    "codeLens.enable": true,
    "coc.preferences.formatOnType": true,
    "git.addGBlameToVirtualText": true,
    "git.addGBlameToBufferVar": true,
    "suggest.fixInsertedWord": false,
    "coc.preferences.currentFunctionSymbolAutoUpdate": false,
    "calc.highlight": true,
    "go.goplsOptions": {
        "completeUnimported": true
    },
    "go.enable": true,
    "git.virtualTextPrefix": ">>>  ",
    "cSpell.enabledLanguageIds": [
        "csharp",
        "go",
        "c",
        "c++",
        "markdown",
        "java",
        "javascript",
        "javascriptreact",
        "markdown",
        "php",
        "plaintext",
        "typescript",
        "typescriptreact",
        "yml"
    ],
    "solargraph.completion": true,
    "solargraph.hover": true,
    "solargraph.autoformat": true,
    "solargraph.symbols": true,
    "solargraph.promptDownload": true,
    "diagnostic.errorSign": "x",
    "yank.priority": 50,
    "coc.source.tag.filetypes": [
        "java",
        "c++",
        "c",
        "go"
    ],
    "coc.source.dictionary.filetypes": [
        "java",
        "c++",
        "c",
        "go"
    ],
    "go.goplsPath": "gopls",
    "rust-analyzer.server.path": "rust-analyzer",
    "suggest.timeout": 1000,
    "explorer.previewAction.onHover": false,
    "go.disable": {
        "workspaceFolders": true
    },
    "javascript.referencesCodeLens.enable": false,
    "typescript.referencesCodeLens.enable": false,
    "javascript.implementationsCodeLens.enable": false,
    "typescript.implementationsCodeLens.enable": false,
    "java.referencesCodeLens.enabled": false,
    "java.implementationsCodeLens.enabled": false,
    "coc.preferences.extensionUpdateCheck": "daily"
}
